<Page xmlns="http://schemas.nativescript.org/tns.xsd"
  xmlns:drawer="nativescript-telerik-ui/sidedrawer"
  xmlns:sidedrawer="/sidedrawer"
  xmlns:actionBar="/actionBar"
  navigatingTo="navigatingTo">
  <Page.actionBar>
    <actionBar:actionBar ActionBarTitle="NativeScript Themes" ></actionBar:actionBar>
  </Page.actionBar>
  <drawer:RadSideDrawer id="sideDrawer" drawerLocation="Left">
      <drawer:RadSideDrawer.mainContent showOverNavigation="true">
        <ScrollView>
          <StackLayout class="mainContent">
            <Button text="Basics" tap="{{ viewBasics }}" class="btn btn-demo" />
            <Button text="Buttons" tap="{{ viewButtons }}" class="btn btn-demo" />
            <Button text="Buttons Active" tap="{{ viewButtonsActive }}" class="btn btn-demo" />
            <Button text="Forms" tap="{{ viewForms }}" class="btn btn-demo" />
            <Button text="Login" tap="{{ viewLogin }}" class="btn btn-demo" />
            <Button text="Searchbars" tap="{{ viewSearch }}" class="btn btn-demo" />
            <Button text="Sliders" tap="{{ viewSliders }}" class="btn btn-demo" />
            <Button text="Switches" tap="{{ viewSwitches }}" class="btn btn-demo" />
            <Button text="Progress & Activity" tap="{{ viewProgress }}" class="btn btn-demo" />
            <Button text="Tabs" tap="{{ viewTabs }}" class="btn btn-demo" />
            <Button text="SegmentedBar" tap="{{ viewSegmentBar }}" class="btn btn-demo" />
            <Button text="Dialogs" tap="{{ viewDialogs }}" class="btn btn-demo"/>
            <Button text="ListView" tap="{{ viewListView }}" class="btn btn-demo" />
            <Button text="Themes" tap="{{ viewThemes }}" class="btn btn-demo" />
          </StackLayout>
        </ScrollView>
    </drawer:RadSideDrawer.mainContent>
    <drawer:RadSideDrawer.drawerContent >
            <sidedrawer:sidedrawer activeComponent='home'></sidedrawer:sidedrawer>
    </drawer:RadSideDrawer.drawerContent>
  </drawer:RadSideDrawer>
</Page>