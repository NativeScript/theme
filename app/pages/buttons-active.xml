
<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo">
  <Page.actionBar>
    <ActionBar class="action-bar">
      <NavigationButton text="Back" android.systemIcon="ic_menu_back" tap="{{goBack}}" />
      <StackLayout class="action-title">
        <Label text="Buttons Active"/>
      </StackLayout>
      <ActionBar.actionItems>
        <ActionItem ios.position="right">
          <ActionItem.actionView>
            <Button text="Right" class="action-item" />
          </ActionItem.actionView>
        </ActionItem>
      </ActionBar.actionItems>
    </ActionBar>
  </Page.actionBar>
  <ScrollView>
    <StackLayout class="demo-full">
        <Button text="btn btn-active" tap="" class="btn btn-active" />
        <Button text="btn btn-primary btn-active" tap="" class="btn btn-primary btn-active" />
        <Button text="btn btn-outline btn-active" tap="" class="btn btn-primary btn-outline btn-active" />
        <Button text="btn btn-primary btn-rounded-sm btn-active" tap="" class="btn btn-primary btn-rounded-sm btn-active" />
        <Button text="btn btn-outline btn-rounded-sm btn-active" tap="" class="btn btn-outline btn-rounded-sm btn-active" />
        <Button text="btn btn-primary btn-rounded-lg btn-active" tap="" class="btn btn-primary btn-rounded-lg btn-active" />
        <Button text="btn btn-outline btn-rounded-lg btn-active" tap="" class="btn btn-outline btn-rounded-lg btn-active" />
      </StackLayout>
  </ScrollView>
</Page>