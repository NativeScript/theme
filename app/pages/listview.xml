<Page xmlns="http://schemas.nativescript.org/tns.xsd"
  xmlns:drawer="nativescript-telerik-ui/sidedrawer"
  xmlns:sidedrawer="/sidedrawer"
  xmlns:actionBar="/actionBar"
  navigatingTo="navigatingTo">
  <Page.actionBar>
    <actionBar:actionBar ActionBarTitle="ListView" ></actionBar:actionBar>
  </Page.actionBar>


  <drawer:RadSideDrawer id="sideDrawer" drawerLocation="Left">
    <drawer:RadSideDrawer.mainContent android:showOverNavigation="false">
      <ScrollView>
        <StackLayout class="demo-full">
          <Label text="Thumbnail" class="h2 m-5" />
          <ListView items="{{ sampleItems }}" class="list-view">
            <ListView.itemTemplate>
              <GridLayout class="item" rows="auto" columns="auto,*">
                <Image row="0" col="0" class="thumb"
                        src="http://img.lum.dolimg.com/v1/images/open-uri20150608-27674-1jdbpa8_be64ca1b.png"/>
                <Label row="0" col="1" class="title" text="{{title}}"/>
              </GridLayout>
            </ListView.itemTemplate>
          </ListView>

          <Label text="Thumbnail Circle" class="h2 m-5" />
          <ListView items="{{ sampleItems }}" class="list-view">
            <ListView.itemTemplate>
              <GridLayout class="item" rows="auto" columns="auto,*">
                <Image row="0" col="0" class="thumb thumb-circle"
                        src="http://img.cinemablend.com/cb/4/f/1/7/5/2/4f1752e6112cd3e633b5c4f6c838aa5975b0a5340f4c65df332d43fa848773bc.jpg"/>
                <Label row="0" col="1" class="title" text="{{title}}"/>
              </GridLayout>
            </ListView.itemTemplate>
          </ListView>

          <Label text="Thumbnail Round" class="h2 m-5" />
          <ListView items="{{ sampleItems }}" class="list-view">
            <ListView.itemTemplate>
              <GridLayout class="item" rows="auto" columns="auto,*">
                <Image row="0" col="0" class="thumb thumb-round"
                        src="http://vignette3.wikia.nocookie.net/dragonball/images/c/cb/CDGDZZfVAAI6_K4.jpg"/>
                <Label row="0" col="1" class="title" text="{{title}}"/>
              </GridLayout>
            </ListView.itemTemplate>
          </ListView>


          <Label text="Multi-Line Thumbnail Round" class="h2 m-5" />
          <ListView items="{{ sampleItemsMulti }}" class="list-view">
            <ListView.itemTemplate>
              <GridLayout class="item multi-line" rows="auto,auto,auto" columns="auto,*">
                <Image row="0" col="0" rowSpan="3" class="thumb thumb-round"
                        src="http://vignette3.wikia.nocookie.net/dragonball/images/c/cb/CDGDZZfVAAI6_K4.jpg"/>
                <Label row="0" col="1" class="title" text="{{title}}"/>
                <Label row="1" col="1" class="body" text="{{body}}"/>
                <Label row="2" col="1" class="footnote" text="{{footnote}}"/>
              </GridLayout>
            </ListView.itemTemplate>
          </ListView>

        </StackLayout>
      </ScrollView>
    </drawer:RadSideDrawer.mainContent>
    <drawer:RadSideDrawer.drawerContent>
        <sidedrawer:sidedrawer activeComponent='list'></sidedrawer:sidedrawer>
    </drawer:RadSideDrawer.drawerContent>
  </drawer:RadSideDrawer>
</Page>