<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo" navigatingFrom="navigatingFrom">
  <Page.actionBar>
    <ActionBar class="action-bar">
      <NavigationButton text="Back" icon="" tap="" />
      <StackLayout class="action-title">
        <Label text="Progress & Activity"/>
      </StackLayout>
      <ActionBar.actionItems>
        <ActionItem ios.position="right">
          <ActionItem.actionView>
            <Button text="Right" class="action-item" />
          </ActionItem.actionView>
        </ActionItem>
      </ActionBar.actionItems>
    </ActionBar>
  </Page.actionBar>
  <StackLayout class="demo-full">
    <GridLayout rows="auto ,*" columns="">
      <Progress id="progress" row="0" value="50" maxValue="100" class="progress" />
      <ActivityIndicator row="1" busy="true" class="activity-indicator" />    
    </GridLayout>
  </StackLayout>
</Page>