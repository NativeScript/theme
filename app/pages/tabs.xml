<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo">
  <Page.actionBar>
    <ActionBar class="action-bar">
      <NavigationButton text="Back" android.systemIcon="ic_menu_back" tap="{{goBack}}" />
      <StackLayout class="action-title">
        <Label text="Tabs"/>
      </StackLayout>
      <ActionBar.actionItems>
        <ActionItem ios.position="right">
          <ActionItem.actionView>
            <Button text="Right" class="action-item" />
          </ActionItem.actionView>
        </ActionItem>
      </ActionBar.actionItems>
    </ActionBar>
  </Page.actionBar>
  <TabView class="tab-view" selectedColor="#30bcff" tabsBackgroundColor="#f9f9f9">
   <TabView.items>
    <!-- ITEMS -->
     <TabViewItem title="NO. ONE">
       <TabViewItem.view>
          <StackLayout>
            <Label text="Tab 1 Content" class="h1" />    
            <StackLayout>
                <Label text="{{ tab1 }}" textWrap="true" />
            </StackLayout>
          </StackLayout>
       </TabViewItem.view>
     </TabViewItem>
     
     <TabViewItem title="Item Two">
      <TabViewItem.view>
        <StackLayout>
              <Label text="Tab 2 Content" class="h1" />
              <StackLayout>
                <Label text="{{ tab2 }}" textWrap="true" />
            </StackLayout>    
          </StackLayout>
        </TabViewItem.view>
     </TabViewItem>

      <TabViewItem title="The Third">
        <TabViewItem.view>
          <StackLayout>
            <Label text="Tab 3 Content" class="h1" />
            <StackLayout>
                <Label text="{{ tab3 }}" textWrap="true" />
            </StackLayout>
          </StackLayout>  
        </TabViewItem.view>
      </TabViewItem>

      <!-- END ITEMS -->
   </TabView.items>
 </TabView>
</Page>